# Gold Tier â€“ Personal AI Employee Configuration
# Copy this file to .env and fill in your values
# See constitution.md and spec.md for setup requirements

# === Gmail OAuth Configuration (from Silver) ===
# Path to OAuth credentials JSON downloaded from Google Cloud Console
GMAIL_CREDENTIALS_FILE=credentials.json
# Path to token file (auto-created after first OAuth consent)
GMAIL_TOKEN_FILE=token.json
# Gmail polling interval in seconds (default: 120)
GMAIL_POLL_INTERVAL=120

# === Odoo ERP Configuration (Gold) ===
# URL of your local Odoo instance (e.g., http://localhost:8069)
ODOO_URL=http://localhost:8069
# Odoo database name
ODOO_DB=odoo
# Odoo user login (email)
ODOO_USER=admin
# Odoo user password
ODOO_PASSWORD=admin

# === Facebook Page Configuration (Gold) ===
# Page access token from Facebook Developer Console
FB_PAGE_ACCESS_TOKEN=
# Facebook Page ID
FB_PAGE_ID=

# === Instagram Business Configuration (Gold) ===
# Instagram access token (via Facebook Graph API)
IG_ACCESS_TOKEN=
# Instagram Business Account ID
IG_BUSINESS_ACCOUNT_ID=

# === X/Twitter API v2 Configuration (Gold) ===
# API Key (Consumer Key)
X_API_KEY=
# API Key Secret (Consumer Secret)
X_API_SECRET=
# Access Token
X_ACCESS_TOKEN=
# Access Token Secret
X_ACCESS_TOKEN_SECRET=

# === Global Settings ===
# Dry-run mode: true = no real API calls, no messages sent
DRY_RUN=true
